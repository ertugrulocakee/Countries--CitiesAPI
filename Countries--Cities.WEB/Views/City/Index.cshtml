@using Countries__Cities.WEB.Models
@model List<CityWithCountryViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Şehirler</h4>
                   
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Şehir Adı</th>
                          <th>Şehir Nüfusu</th>
                          <th>Şehir Görseli</th>
                          <th>İşlemler</th>
           
                        </tr>
                      </thead>
                      <tbody>
                       @foreach (var item in Model)
                      {
                                               
                        <tr>
                          <td>@item.Id</td>
                          <td>@item.name</td>
                          <td>@item.population</td>
                          <td><img src="/cityimage/@item.imageUrl" alt="city" width=50 height=50></td>
                          <td><a href="/City/Remove/@item.Id" class="btn btn-danger">Sil</a>
                              <a href="/City/UpdateCity/@item.Id" class="btn btn-success">Düzenle</a>
                        
                        </tr>
               
                      }
                      </tbody>
                    </table>
                    <br/>
                    <a href="/City/SaveCity/" class="btn btn-primary">Yeni Şehir Ekle</a>
                  </div>
                </div>
              </div>
