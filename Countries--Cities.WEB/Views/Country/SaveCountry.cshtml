@model Countries__Cities.WEB.Models.CountryViewModel

@{
    ViewData["Title"] = "SaveCountry";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert('@ViewBag.Message');
        };
    </script>
}  


<div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Ülke Ekle</h4>


            <form asp-action="SaveCountry" method="post" asp-controller="Country" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="name"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="population"></label>
                <input asp-for="population" class="form-control" />
                <span asp-validation-for="population" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="capital"></label>
                <input asp-for="capital" class="form-control" />
                <span asp-validation-for="capital" class="text-danger"></span>
            </div>

   
             <div class="form-group">
                <label asp-for="image"></label>
                <input type="file" asp-for="image" class="form-control" required/>
                
            </div>


            <div class="form-group">

                <input type="submit" value="Save" class="btn-primary" />

            </div>
        </form>

                    </div>
                </div>
              </div>

