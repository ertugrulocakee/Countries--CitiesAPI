@using Countries__Cities.WEB.Models
@model List<CountryWithCityViewModel>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Ülkeler</h4>
                   
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Ülke Adı</th>
                          <th>Ülke Nüfusu</th>
                          <th>Başkenti</th>
                          <th>Ülke Bayrağı</th>
                          <th>İşlemler</th>
           
                        </tr>
                      </thead>
                      <tbody>
                       @foreach (var item in Model)
                      {
                                               
                        <tr>
                          <td>@item.Id</td>
                          <td>@item.name</td>
                          <td>@item.population</td>
                          <td>@item.capital</td>
                          <td><img src="/countryimage/@item.imageUrl" alt="country" width=50 height=50></td>
                          <td><a href="/Country/Remove/@item.Id" class="btn btn-danger">Sil</a>
                              <a href="/Country/UpdateCountry/@item.Id" class="btn btn-success">Düzenle</a>
                      
                          
                        </tr>
               
                      }
                      </tbody>
                    </table>
                    <br/>
                    <a href="/Country/SaveCountry/" class="btn btn-primary">Yeni Ülke Ekle</a>
                  </div>
                </div>
              </div>


